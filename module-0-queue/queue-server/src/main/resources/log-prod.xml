<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <property name="FILE_PATH" value="${user.home}/logs/queue-prod"/>
    <property name="LOG_PATTERN" value="[%X{receiveTime}%d] [${PID:- } %t\\(%logger\\) : %p]%X{requestInfo} %class{30}#%method\\(%file:%line\\) %m%n%n"/>

    <appender name="PROJECT" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${FILE_PATH}.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${FILE_PATH}-%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>30</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>${LOG_PATTERN}</pattern>
        </encoder>
    </appender>

    <appender name="ASYNC" class="ch.qos.logback.classic.AsyncAppender">
        <discardingThreshold>0</discardingThreshold>
        <includeCallerData>true</includeCallerData>
        <appender-ref ref ="PROJECT"/>
    </appender>


    <logger name="zipkin.autoconfigure" level="warn"/>
    <logger name="io.undertow" level="warn"/>
    <logger name="freemarker" level="warn"/>

    <logger name="com.github.queue.repository" level="warn"/>
    <logger name="com.github.common.mvc" level="warn"/>

    <logger name="com.netflix" level="warn"/>
    <!--<logger name="com.github" level="warn"/>-->
    <logger name="com.zaxxer" level="warn"/>
    <logger name="com.sun" level="warn"/>

    <logger name="org.springframework" level="warn"/>
    <logger name="org.hibernate" level="warn"/>
    <logger name="org.mybatis" level="warn"/>
    <logger name="org.apache" level="warn"/>
    <logger name="org.jboss" level="warn"/>


    <root level="info">
        <appender-ref ref="ASYNC"/>
    </root>
</configuration>
